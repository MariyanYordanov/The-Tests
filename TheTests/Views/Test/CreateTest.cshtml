@model TestCreateModel

@{
    ViewData["Title"] = "Create Test";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="container mt-4">
    <h1>Create Test</h1>

    <form asp-action="CreateTest" method="post">

        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CategoryId"/>
        <!-- Test Details -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Test Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Test Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

         <!-- Category Management -->
        <div class="mb-3">
            <h3>Manage Categories</h3>
            <div id="category-management">
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                    <option value="">-- Select a category --</option>
                </select>
                <div class="mb-3">
                    <button type="button" class="btn btn-secondary mt-3" onclick="location.href='@Url.Action("ManageCategories", "Category")'">
                        Add Category
                    </button>
                </div>

            </div>
        </div>

        <button type="submit" class="btn btn-success mt-4">Create Test</button> 
    </form>
   
</div>
