@model TestCreateModel

@{
    ViewData["Title"] = "Create Test";
}

    <form id="create-test-form" asp-action="CreateTest" method="post">
        <input type="hidden" asp-for="CreatorId" />
        @Html.AntiForgeryToken()

        <!-- Test Title -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Test Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Test Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Test Description</label>
            <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Category Dropdown -->
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories" required>
                <option value="">-- Select a category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary mt-3">Create Test</button>
    </form>

